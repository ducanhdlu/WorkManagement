@model WorkManagement.Models.BonusDayOff
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Thêm ngày nghỉ cho nhân viên</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form ng-app="" name="frmCreateBonusDayOff" novalidate method="post" action="Create" class="form-horizontal form-label-left">

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="employee_name">
                            Tên nhân viên <span class="required">*</span>
                        </label>
                        <div class="col-md-5 col-sm-5 col-xs-12">
                            <select class="select2_single form-control" name="employee_id" required>
                                @foreach (var item in (List<WorkManagement.Models.Employee>)ViewBag.Employees)
                                {
                                    <option value="@item.ID">@item.FullName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="number_of_days">
                            Số ngày <span class="required">*</span>
                        </label>
                        <div class="col-md-5 col-sm-5 col-xs-12">
                            <input type="number" name="number_of_days" ng-pattern="/^([0-9]+)$/" required ng-model="number_of_days" ng-trim="true" class="form-control col-md-7 col-xs-12 ">
                        </div>
                        <div class="col-md-5 col-sm-5 col-xs-12">
                            <span class="error" ng-show="(frmCreateBonusDayOff.number_of_days.$dirty||frmCreateBonusDayOff.$submitted) && frmCreateBonusDayOff.number_of_days.$error.required"><label class="control-label">Hãy nhập số ngày.</label></span>
                            <span class="error" ng-show="frmCreateBonusDayOff.number_of_days.$dirty && frmCreateBonusDayOff.number_of_days.$error.pattern"><label class="control-label">Chỉ nhập số nguyên dương.</label></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="description">
                            Ghi chú
                        </label>
                        <div class="col-md-5 col-sm-5 col-xs-12">
                            <input type="text" name="description" class="form-control col-md-7 col-xs-12 ">
                        </div>
                        
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button ng-disabled="frmCreateBonusDayOff.$invalid" type="submit" class="btn btn-primary">Thêm</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
