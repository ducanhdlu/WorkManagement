@model IEnumerable<WorkManagement.Models.AbsenceLetter>

@{
    ViewBag.Title = "Tạo Nghỉ Phép";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@*<div ng-app="myApp" ng-controller="formCtrl">*@
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>ĐĂNG KÝ NGHỈ PHÉP</h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br />
            <form ng-app="" novalidate name="frmCreateAbsenceLetter" method="post" action="CreatePost" class="form-horizontal form-label-left">
                @*<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">*@
                <div class="form-group">
                    <label class="control-label col-md-2 col-sm-2 col-xs-12" for="startDay">
                        Thời gian bắt đầu <span class="required">*</span>
                    </label>
                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <input type="text" name="startDay" autocomplete="off" ng-model="startDay" id="datepicker" class="form-control col-md-7 col-xs-12 input-validate datepicker">
                    </div>

                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <span class="error" ng-show="(frmCreateAbsenceLetter.startDay.$dirty||frmCreateAbsenceLetter.$submitted) && frmCreateAbsenceLetter.startDay.$error.required"><label class="control-label">Hãy nhập thời gian bắt đầu</label></span>

                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2 col-sm-2 col-xs-12" for="totalTime">
                        Thời gian nghỉ <span class="required">*</span>
                    </label>
                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <input type="number" name="totalTime" ng-pattern="/^([0-9]+)$/" required ng-model="totalTime" class="form-control col-md-7 col-xs-12 input-validate">
                    </div>
                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <span class="error" ng-show="(frmCreateAbsenceLetter.totalTime.$dirty||frmCreateAbsenceLetter.$submitted) && frmCreateAbsenceLetter.totalTime.$error.required"><label class="control-label">Hãy nhập thời gian nghỉ</label></span>
                        <span class="error" ng-show="frmCreateAbsenceLetter.totalTime.$dirty && frmCreateAbsenceLetter.totalTime.$error.pattern"><label class="control-label">Chỉ đc nhập số nguyên.</label></span>
                        <span class="error" ng-show="frmCreateAbsenceLetter.totalTime.$dirty && frmCreateAbsenceLetter.totalTime.$error.number"><label class="control-label">Số nhập sai định dạng.</label></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2 col-sm-2 col-xs-12" for="reason">
                        Lý do <span class="required">*</span>
                    </label>
                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <select class="form-control col-md-7 col-sm-7 col-xs-12" required name="reason">
                            @foreach (var item in ViewBag.ListReason)
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                        </select>

                    </div>
                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <span class="error" ng-show="(frmCreateAbsenceLetter.reason.$dirty||frmCreateAbsenceLetter.$submitted) && frmCreateAbsenceLetter.totalTime.$error.required"><label class="control-label">Hãy chọn lý do</label></span>
                    </div>

                </div>
                <div class="ln_solid"></div>

                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <button ng-click ng-disabled="frmCreateAbsenceLetter.$invalid" class="btn btn-primary">Gửi</button>
                    </div>
                    @if (TempData["ErrorDay"] != null)
                    {
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <p class="text-danger text-center">@TempData["ErrorDay"]</p>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>




<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
