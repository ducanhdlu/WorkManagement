@model IEnumerable<WorkManagement.Models.Timekeeping>
@using WorkManagement.Controllers

@{
    ViewBag.Title = "ManagerOneDay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_title">

                <h2>Thông tin các nhân viên trong ngày @(((DateTime)ViewBag.current_day).ToShortDateString())</h2>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="x_content">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Tên nhân viên
                        </th>
                        <th>
                            Check in
                        </th>
                        <th>
                            Check out
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Account.Employee.FullName)
                            </td>
                            <td>
                                @Static.StringToDatetime(item.CheckIn)
                            </td>
                            @if (item.CheckOut != null)
                            {
                                <td>
                                    @Static.StringToDatetime(item.CheckOut)
                                </td>
                            }
                            else
                            {
                                <td>
                                    <p class="text-danger">Chưa check out</p>
                                </td>
                            }


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


